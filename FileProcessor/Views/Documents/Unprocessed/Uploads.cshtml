@{
    ViewBag.Title = "Upload Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Upload a flat file</h3>

<div class="row">
    <div class="col-lg-8">
        @using (Html.BeginForm("Upload", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <p style="margin-top:2em;">
                Please ensure that the file(s) you are uploading is a flat file with the extension ".txt" or ".csv" and also note that the data contained inside the files should be separated by a semi-colon.
            </p>

            <input multiple type="file" accept=".csv, text/plain" name="files" value="Browse" style="margin-top:2em;" />
            <input type="submit" value="Upload" style="margin-top:1em;" />
        }

        @if (ViewBag.UploadSuccess == true)
        {
            <div style="margin-top:1em;">@ViewBag.Message </div>
        }
        else if (ViewBag.UploadSuccess == false)
        {
            <div class="text-danger" style="margin-top:1em;">@ViewBag.ErrorMessage </div>
        }
    </div>

    <div class="col-md-6" style="margin-top:2em;">
        @Html.ActionLink("View Results", "Files", "Processed")
    </div>
</div>